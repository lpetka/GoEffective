<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.TaskEditActivity">

    <EditText
        android:id="@+id/task_name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/input_task_name_hint"
        android:inputType="text"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/remove_task_button"
        android:padding="16dp" />
    <Button
        android:id="@id/remove_task_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="X" />

    <Switch
        android:id="@+id/reminder_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_name_input"
        android:checked="false"
        android:padding="16dp"
        android:showText="false"
        android:text="@string/switch_reminder_label" />

    <project.io.goeffective.widgets.WeekDayView
        android:id="@+id/week_day_list_selector"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_below="@id/reminder_switch"
        android:choiceMode="multipleChoice"
        android:padding="16dp" />

    <EditText
        android:id="@+id/note_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/week_day_list_selector"
        android:ems="10"
        android:hint="@string/input_task_note_hint"
        android:inputType="textMultiLine" />
</RelativeLayout>