<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.io.goeffective.fragments.HabitFragment">

    <EditText
        android:id="@+id/task_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/input_task_name_hint"
        android:inputType="text"
        android:padding="16dp" />

    <Switch
        android:id="@+id/reminder_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_name_input"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:text="@string/switch_reminder_label"
        android:padding="16dp"
        android:showText="false" />

    <project.io.goeffective.widgets.WeekDayView
        android:id="@+id/week_day_list_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reminder_switch"
        android:choiceMode="multipleChoice"
        android:padding="16dp"
        android:layout_above="@+id/note_input" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="@string/input_task_note_hint"
        android:id="@+id/note_input"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
